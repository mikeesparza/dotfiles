# HTB VPN Connection 
alias letshtb='sudo openvpn /opt/htb/connect/shaqnatomy.ovpn'

# Tryhackme VPN Connection 
alias letsthm='sudo openvpn /opt/thm/connect/mike.esparza.ovpn'

# LS -LAH replacement 
alias ll='ls -lah'

# SimpleHTTPServer spinup 
alias letshost='python -m SimpleHTTPServer'

# NMAP Function for easier scanning
quickscan() { nmap -sC -sV -Pn "$1"; }

# NMAP Function for ALL PORT Scans
allscan() { nmap -p- -sC -sV -Pn "$1";  }

# TMUX HTB New Session 
letsworkon() { tmux new -s "$1"; }

# Update Ludus 
alias updateludus="curl -s https://ludus.cloud/install | bash"

# Update Linux
alias letsupdate='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y'

alias src='source ~/.zshrc'
alias h="cd ~"
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'

